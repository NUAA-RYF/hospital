<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/constellation_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/constellation_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@id/constellation_img"
        app:layout_constraintLeft_toLeftOf="@id/constellation_img"
        app:layout_constraintRight_toRightOf="@id/constellation_img"/>

    <TextView
        android:id="@+id/constellation_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/constellation_name"
        app:layout_constraintLeft_toLeftOf="@id/constellation_img"
        app:layout_constraintRight_toRightOf="@id/constellation_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>