<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonalActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/personal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Toolbar_Height"
        android:background="@color/xui_config_color_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@color/White"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/personal_username"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        app:sDividerLineType="top"
        app:sDividerLineColor="@color/Black"
        app:sLeftTextColor="@color/Black"
        app:sLeftTextString="@string/personal_username"
        app:sRightIconRes="@mipmap/icon_right_arrow"
        app:sRightTextColor="@color/Gray"
        app:layout_constraintTop_toBottomOf="@id/personal_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/personal_password"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:sDividerLineType="top"
        app:sDividerLineColor="@color/Black"
        app:sLeftTextColor="@color/Black"
        app:sLeftTextString="@string/personal_password"
        app:sRightIconRes="@mipmap/icon_right_arrow"
        app:sRightTextColor="@color/Gray"
        app:sRightTextString="@string/personal_change_password"
        app:layout_constraintTop_toBottomOf="@id/personal_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/personal_phone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:sDividerLineType="both"
        app:sDividerLineColor="@color/Black"
        app:sLeftTextColor="@color/Black"
        app:sLeftTextString="@string/personal_phone"
        app:sRightIconRes="@mipmap/icon_right_arrow"
        app:sRightTextColor="@color/Gray"
        app:layout_constraintTop_toBottomOf="@id/personal_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>